!!!
%html
  %head
    %title PragThinker
    = stylesheet_link_tag 'web_app_theme'
    = javascript_include_tag 'application'
    = javascript_include_tag 'ckeditor/ckeditor'   
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} PragThinker
        #user-navigation
          %ul.wat-cf
            = render 'devise/menu/login_items'
        #main-navigation
          %ul.wat-cf
            %li{:class => (params[:controller] == "home" ? "first active" : "first")}
              = link_to "Home", root_path
            %li{:class => (params[:controller] == "blog_entries" ? "active" : nil)}              
              = link_to "Blog Entries", blog_entries_path
            %li
              %a{:href => "#"}= t("web-app-theme.profile", :default => "Profile")
            %li
              %a{:href => "#"}= t("web-app-theme.settings", :default => "Settings")                                    
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} PragThinker.
        #sidebar
          = yield :sidebar
